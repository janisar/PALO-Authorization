<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
    <metadata>
        <!-- The identifier that must be unique within the hosting gallery -->
        <id>PALO-AuthorizationFilter</id>

        <!-- The package version number that is used when resolving dependencies -->
        <version>1.0.1</version>

        <!-- Authors contain text that appears directly on the gallery -->
        <authors>Janis Ardel</authors>

        <!-- 
            Owners are typically nuget.org identities that allow gallery
            users to easily find other packages by the same owners.  
        -->
        <owners>ardel</owners>

        <!-- Project URL provides a link for the gallery -->
        <projectUrl>https://github.com/janisar/PALO-Authorization</projectUrl>

        <!-- 
            If true, this value prompts the user to accept the license when
            installing the package. 
        -->
        <requireLicenseAcceptance>false</requireLicenseAcceptance>

        <!-- Any details about this particular release -->
        <releaseNotes>Authorization filter for netcore controllers</releaseNotes>

        <!-- 
            The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. 
        -->
        <description>JWT Role aware authorization filter for netcore controllers. Token has to be generated by private
            key (SHA256).
            Set the public key by Configuration.SetPublicKey(key).
            Then use the attribute AuthRole("ROLE")
        </description>

        <!-- Dependencies are automatically installed when the package is installed -->
        <dependencies>
            <dependency id="BouncyCastle" version="1.8.5"/>
            <dependency id="Microsoft.AspNet.Mvc" version="5.2.7"/>
            <dependency id="Microsoft.AspNet.WebApi.Core" version="5.2.7"/>
            <dependency id="Microsoft.AspNetCore.Mvc.Abstractions" version="2.2.0"/>
            <dependency id="Microsoft.AspNetCore.Mvc.Core" version="2.2.5"/>
            <dependency id="System.IdentityModel.Tokens.Jwt" version="5.4.0"/>
        </dependencies>
    </metadata>

</package>